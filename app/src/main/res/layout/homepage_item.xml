<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/d_jobprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/d_jobcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="35dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/d_img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_da_person"
                    android:scaleType="fitCenter"
                    tools:ignore="SpeakableTextPresentCheck" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/d_tv_jobname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/jobtitle"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_tv_jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/d_tv_jobtype"
                android:paddingStart="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/d_img_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:button="@drawable/d_checkbox"
                app:buttonTint="#00BCD4" />

            <TextView
                android:id="@+id/d_tv_joblocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="@string/d_tv_joblocation"
                android:paddingRight="50dp"
                android:textColor="@color/modern_blue"
                android:textColorHint="#3F51B5"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>